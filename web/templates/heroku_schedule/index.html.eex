<h2>Listing Heroku schedules</h2>

<table class="table">
  <thead>
    <tr>
      <th>Application</th>
      <th>Dyno name</th>
      <th>Schedule</th>
      <th>Rule</th>
      <th>Description</th>
      <th>State</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for schedule <- @schedules do %>
    <tr>
      <td><%= schedule.application %></td>
      <td><%= schedule.dyno_name %></td>
      <td><%= schedule.schedule %></td>
      <td><%= schedule.rule %></td>
      <td><%= schedule.description %></td>
      <td><%= schedule.state %></td>

      <td class="text-right">
        <%= link "Show", to: heroku_schedule_path(@conn, :show, schedule), class: "btn btn-default btn-xs" %>
        <%= link "Copy", to: heroku_schedule_path(@conn, :copy, schedule), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: heroku_schedule_path(@conn, :edit, schedule), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: heroku_schedule_path(@conn, :delete, schedule), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New Heroku schedule", to: heroku_schedule_path(@conn, :new) %>
<br/><br/>
<%= link "Snapshot current Heroku schedules", to: heroku_schedule_path(@conn, :snapshot_form) %>
